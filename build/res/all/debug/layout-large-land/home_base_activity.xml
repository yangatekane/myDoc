<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/btn_new_patiant"
        android:text="@string/new_patient"
        android:background="@drawable/button_state"
        android:padding="8dp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_existing_patiant"
        android:text="@string/exist_patients"
        android:background="@drawable/button_state"
        android:padding="8dp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentRight="true"
        android:id="@+id/btn_emergency_patient"
        android:text="@string/emergency_patient"
        android:background="@drawable/button_state"
        android:padding="8dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/btn_new_patiant"
        android:background="@drawable/drawer_background"
        android:padding="5dp">
        <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_width="470dp"
            android:layout_height="match_parent"
            android:background="@drawable/docking_border"
            android:padding="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/drawer_background"
                android:padding="10dp">
                <EditText
                    android:id="@+id/edit_patient_name"
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:layout_alignParentLeft="true"
                    android:hint="Patient's Name"
                    android:inputType="text"
                    android:textCursorDrawable="@null"
                    android:layout_marginTop="8dp"/>
                <EditText
                    android:id="@+id/edit_patient_surname"
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/edit_patient_name"
                    android:inputType="text"
                    android:textCursorDrawable="@null"
                    android:hint="Patient's Surname"
                    android:layout_marginTop="8dp"/>
                <EditText
                    android:id="@+id/edit_patient_case"
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:layout_alignParentLeft="true"
                    android:inputType="text"
                    android:layout_below="@+id/edit_patient_surname"
                    android:textCursorDrawable="@null"
                    android:hint="Patient's Case"/>
                <Spinner
                    android:id="@+id/spin_payment_type"
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/edit_patient_case"
                    android:entries="@array/payment_types"
                    />
                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:layout_below="@+id/spin_payment_type"
                    android:text="Date Admitted:"
                    android:id="@+id/txt_date_admitted"
                    android:layout_alignParentLeft="true"
                    style="@style/NormalText"
                    />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:id="@+id/date"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/txt_date_admitted"
                    android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/spin_warranty_day"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:entries="@array/days"
                        />
                    <Spinner
                        android:id="@+id/spin_warranty_month"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:entries="@array/months"
                        />
                    <Spinner
                        android:id="@+id/spin_warranty_year"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:entries="@array/years"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:layout_alignParentLeft="true">

                    <CheckBox
                        android:id="@+id/addmit_checkbox"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:checked="false"/>

                    <TextView
                        android:id="@+id/login_end_user_license_agreement"
                        style="@style/NormalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/treatment_eula"/>

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="470dp"
            android:layout_height="match_parent"
            android:background="@drawable/docking_border"
            android:layout_toRightOf="@+id/left_layout"
            android:layout_marginLeft="10dp"
            android:padding="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/drawer_background"
                android:padding="10dp">
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="3dp"
                    android:id="@+id/file_progress"
                    android:layout_above="@+id/btn_x_ray"
                    android:layout_gravity="center_vertical|right" />
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="130dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/btn_x_ray"
                    android:text="@string/riadio"
                    android:background="@drawable/button_state"
                    android:padding="8dp"/>
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="130dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/btn_teeth"
                    android:text="@string/dental"
                    android:background="@drawable/button_state"
                    android:padding="8dp"/>
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="130dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/btn_wound"
                    android:text="@string/medical"
                    android:background="@drawable/button_state"
                    android:padding="8dp"/>

                <ImageView
                    android:layout_height="190dp"
                    android:layout_width="300dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/btn_x_ray"
                    android:padding="10dp"
                    android:background="@drawable/metallic_background"
                    android:id="@+id/camera_scan" />
                <ListView
                    android:id="@+id/requisition_list"
                    android:layout_height="190dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="200dp"
                    android:layout_toRightOf="@+id/camera_scan"
                    android:layout_below="@+id/btn_wound"
                    android:padding="10dp"/>
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/btn_cancel"
                    android:text="@string/cancel"
                    android:background="@drawable/button_state"
                    android:padding="8dp"/>
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="60dp"
                    android:id="@+id/btn_take_picture"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_camera_big"/>
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/btn_next"
                    android:text="@string/save"
                    android:background="@drawable/button_state"
                    android:padding="8dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_height="55dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_action_bar_backgroud"
        android:orientation="horizontal"></LinearLayout>
</RelativeLayout>
